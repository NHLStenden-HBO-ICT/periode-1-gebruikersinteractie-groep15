<Window x:Class="Prototype_Game_Interaction.PauzeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype_Game_Interaction"
        mc:Ignorable="d"
        Title="PauzeMenu" Height="1024" Width="1440"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Height="1008" VerticalAlignment="Top">
            <TextBlock Name ="TitelScherm"
                       TextAlignment="Center"
                       Width="340"
                       Margin="34,44,1038,862"
                       FontSize="64"
                       Text="Pauze menu"/>

            <Button Name="Terugnaarmenu" 
                    Content="Terug naar het begin menu" 
                    Click="ZekerheidClick"
                    FontSize="25"
                    Height="50"
                    Width="310"
                    Margin="10,44,1038,-825"
            />

            <Button Name="Verder" 
                    Content="Verder spelen" 
                    Click="GameClick"
                    FontSize="25"
                    Height="50"
                    Width="310"
                    Margin="10,44,-1038,-825"
            />


        </Grid>
    </Grid>
</Window>
